<ImageButton@ButtonBehavior+Image>
<ImageToggle@ToggleButtonBehavior+Image>

<SimpleDigiClockLandscape>:
    dateValue:   dateField   
    clockValue:  clockField
    orientation: 'vertical'
    backColor:  [0,0,0,0]
    frontColor: [1,1,1,1]
    clockColor: [1.0,0.34,0.0,1.0]  # red orange
    #clockColor:  rgba: 0.80, 0.98, 0.02, 1.0 # lemon yellow
    
    Button:
        id:                clockField
        background_color:  root.backColor
        halign:            'center'
        valign:            'bottom' 
        color:             root.clockColor 
        #padding_y:        10
        text:              '[size=256]%H:%M[/size][size=64]:%S[/size]'
        markup:            True

    Button:
        id:                dateField
        background_color:  root.backColor 
        halign:            'center'
        valign:            'top'
        size_hint_max_y:   100
        color:             root.clockColor
        text:              '%A, %d. %B %Y'
        font_size:         '42sp'
        markup:            True
           
    BoxLayout:
        size_hint_max_y:   100
        orientation:       'horizontal'
        background:        'black'
        ImageToggle:
            id:               micButton
            background_color: root.backColor
            color:            root.frontColor
            size_hint_max_x:  100 
            source:           "./faces/simpledigital/microphoneoff.png" if self.state=='normal' else "./faces/simpledigital/microphoneon.png"

        Button:
            id:               sleepButton
            background_color: root.backColor
            text:             ''
            color:            root.frontColor
            font_size:        '42sp'
        ImageButton:
            id:               settingsButton
            background_color: root.backColor
            color:            root.frontColor
            size_hint_max_x:  100
            source: "./faces/simpledigital/settings.png"
            #on_release:       root.open_settings()
            #center_x: self.parent.center_x
            #center_y: self.parent.center_y
